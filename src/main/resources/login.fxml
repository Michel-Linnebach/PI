<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.*?>

<VBox spacing="18" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="loginController" prefWidth="520" prefHeight="600" styleClass="root">
    <ImageView fitWidth="320" fitHeight="320" preserveRatio="true">
        <image>
            <Image url="@/static/images/Buns.png" />
        </image>
    </ImageView>
    <Label text="Bem-vindo ao Super Quiz!" styleClass="titulo"/>
    <Label text="Digite seu super nome:" styleClass="label"/>
    <TextField fx:id="nomeField" promptText="Seu nome aqui" styleClass="text-field"/>
    <Label text="Digite o super tema do quiz:" styleClass="label"/>
    <TextField fx:id="temaField" promptText="ex: história, ciência, esportes" styleClass="text-field"/>
    <Button text="Iniciar Super Quiz" onAction="#iniciarQuiz" styleClass="button"/>
    <Label fx:id="mensagemLabel" style="-fx-text-fill: #ffbaba; -fx-font-size: 14px;"/>
</VBox>
